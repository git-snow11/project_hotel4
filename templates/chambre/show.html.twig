{% extends 'base.html.twig' %}

{% block title %}Room Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1>Room Details</h1>
            <a href="{{ path('app_chambre_index') }}" class="btn btn-secondary">‚Üê Back to list</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th style="width: 40%;">ID</th>
                        <td>{{ chambre.id }}</td>
                    </tr>
                    <tr>
                        <th>Room Number</th>
                        <td>{{ chambre.chambreNumero }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>
                            <span class="badge bg-info">{{ chambre.chambreType|capitalize }}</span>
                        </td>
                    </tr>
                    <tr>
                        <th>Capacity</th>
                        <td>{{ chambre.capacite }} guests</td>
                    </tr>
                    <tr>
                        <th>Price per Night</th>
                        <td><strong>{{ chambre.prix|number_format(2, '.', ',') }} MAD</strong></td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>
                            {% if chambre.isActive %}
                                <span class="badge bg-success">Active</span>
                            {% else %}
                                <span class="badge bg-danger">Inactive</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-4">
                <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}" class="btn btn-warning">Edit</a>
                {{ include('chambre/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}