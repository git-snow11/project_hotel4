{% extends 'base.html.twig' %}

{% block title %}Room Management{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1>Room Management</h1>
            <a href="{{ path('app_chambre_new') }}" class="btn btn-primary">+ Create New Room</a>
            <a href="{{ path('admin') }}" class="btn btn-secondary">‚Üê Back to Dashboard</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Room Number</th>
                        <th>Type</th>
                        <th>Capacity</th>
                        <th>Price (MAD)</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for chambre in chambres %}
                    <tr>
                        <td>{{ chambre.id }}</td>
                        <td>{{ chambre.chambreNumero }}</td>
                        <td>
                            <span class="badge bg-info">{{ chambre.chambreType|capitalize }}</span>
                        </td>
                        <td>{{ chambre.capacite }} guests</td>
                        <td>{{ chambre.prix|number_format(2, '.', ',') }}</td>
                        <td>
                            {% if chambre.isActive %}
                                <span class="badge bg-success">Active</span>
                            {% else %}
                                <span class="badge bg-danger">Inactive</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_chambre_show', {'id': chambre.id}) }}" class="btn btn-sm btn-info">View</a>
                            <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">No rooms found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            
            <p class="mt-3">Total Rooms: {{ chambres|length }}</p>
        </div>
    </div>
</div>
{% endblock %}