<form method="post" action="{{ path('app_facturation_delete', {'id': facturation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this invoice?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ facturation.id) }}">
    <button class="btn btn-danger">
        <i class="fa fa-trash"></i> Delete Invoice
    </button>
</form>
