{% extends 'base.html.twig' %}

{% block title %}Invoice Management{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1>Invoice Management</h1>
            <a href="{{ path('app_facturation_new') }}" class="btn btn-primary">+ Create New Invoice</a>
            <a href="{{ path('admin') }}" class="btn btn-secondary">‚Üê Back to Dashboard</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Reservation Code</th>
                        <th>Customer</th>
                        <th>Amount (MAD)</th>
                        <th>Invoice Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for facturation in facturations %}
                    <tr>
                        <td>{{ facturation.id }}</td>
                        <td><code>{{ facturation.reservation.idReservation }}</code></td>
                        <td>{{ facturation.reservation.user.prenom }} {{ facturation.reservation.user.nom }}</td>
                        <td><strong>{{ facturation.montant|number_format(2, '.', ',') }}</strong></td>
                        <td>{{ facturation.dateFacture|date('d/m/Y') }}</td>
                        <td>
                            <a href="{{ path('app_facturation_show', {'id': facturation.id}) }}" class="btn btn-sm btn-info">View</a>
                            <a href="{{ path('app_facturation_edit', {'id': facturation.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No invoices found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            
            <p class="mt-3">Total Invoices: {{ facturations|length }}</p>
        </div>
    </div>
</div>
{% endblock %}