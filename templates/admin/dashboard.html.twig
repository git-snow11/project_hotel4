{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Welcome to Hotel Management System</h1>
        <div>
            <a href="{{ path('app_home') }}" class="btn btn-primary me-2">
                <i class="fa fa-home"></i> Home
            </a>
            <a href="{{ path('app_logout') }}" class="btn btn-danger">
                <i class="fa fa-sign-out"></i> Logout
            </a>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info">
                <h2>Admin Dashboard</h2>
                <p>Use the menu on the left to manage your hotel:</p>
                <ul>
                    <li><strong>Rooms</strong> - Manage hotel rooms</li>
                    <li><strong>Reservations</strong> - View and manage bookings</li>
                    <li><strong>Invoices</strong> - Manage billing and invoices</li>
                    <li><strong>Users</strong> - Manage user accounts</li>
                </ul>
            </div>
            
            <div class="alert alert-success mt-3">
                <p class="mb-0">
                    <strong>Logged in as:</strong> {{ app.user.prenom }} {{ app.user.nom }} 
                    ({{ app.user.email }})
                </p>
            </div>
        </div>
    </div>
{% endblock %}


