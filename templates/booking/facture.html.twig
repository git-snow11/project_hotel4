{% extends 'base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Invoice</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Hotel Transylvania</h5>
                            <p class="mb-0">
                                123 Hotel Street<br>
                                Casablanca, Morocco<br>
                                Phone: +212 123 456 789<br>
                                Email: contact@hoteltransylvania.com
                            </p>
                        </div>
                        <div class="col-md-6 text-end">
                            <h5>Invoice Details</h5>
                            <p class="mb-0">
                                <strong>Invoice #:</strong> {{ facturation.id }}<br>
                                <strong>Date:</strong> {{ facturation.dateFacture|date('d/m/Y') }}<br>
                                <strong>Reservation Code:</strong> <code>{{ reservation.idReservation }}</code>
                            </p>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="mb-4">
                        <h5>Customer Information</h5>
                        <p class="mb-0">
                            <strong>Name:</strong> {{ app.user.prenom }} {{ app.user.nom }}<br>
                            <strong>Email:</strong> {{ app.user.email }}<br>
                            <strong>Phone:</strong> {{ app.user.telephone }}
                        </p>
                    </div>
                    
                    <hr>
                    
                    <h5>Reservation Details</h5>
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Description</th>
                                <th class="text-end">Details</th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <strong>Room {{ reservation.chambre.chambreNumero }}</strong><br>
                                    <small class="text-muted">{{ reservation.chambre.chambreType|capitalize }} - Capacity: {{ reservation.chambre.capacite }} guests</small>
                                </td>
                                <td class="text-end">
                                    Check-in: {{ reservation.dateDebut|date('d/m/Y') }}<br>
                                    Check-out: {{ reservation.dateFin|date('d/m/Y') }}<br>
                                    <strong>{{ reservation.dateDebut.diff(reservation.dateFin).days }} nights</strong>
                                </td>
                                <td class="text-end">
                                    {{ reservation.chambre.prix|number_format(2, '.', ',') }} MAD/night<br>
                                    <strong>{{ facturation.montant|number_format(2, '.', ',') }} MAD</strong>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr class="table-success">
                                <td colspan="2" class="text-end"><h5 class="mb-0">Total Amount:</h5></td>
                                <td class="text-end"><h4 class="mb-0">{{ facturation.montant|number_format(2, '.', ',') }} MAD</h4></td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="alert alert-info mt-4" style="color: black;">
                         <strong>Payment Status:</strong> Pending<br>
                         <small>Please complete payment upon arrival at the hotel.</small>
                    </div>

                   <div class="alert alert-success mt-3" style="color: black;">
                   <strong>Reservation Status:</strong> <span class="badge bg-success">{{ reservation.status|capitalize }}</span>
                  </div>
                    <hr>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <button onclick="window.print()" class="btn btn-secondary">
                                <i class="fa fa-print"></i> Print
                            </button>
                        </div>
                        <div class="col-md-6 text-end">
                            <a href="{{ path('app_home') }}" class="btn btn-primary">
                                Back to Home
                            </a>
                        </div>
                    </div>
                    
                    <div class="mt-4 pt-3 border-top text-center text-muted">
                        <small>
                            Thank you for your trust. For any questions, contact us at contact@hoteltransylvania.com<br>
                            Â© 2026 Hotel Transylvania - All rights reserved
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @media print {
        .btn, nav, footer, .alert {
            display: none !important;
        }
        .card {
            border: none !important;
        }
    }
</style>
{% endblock %}