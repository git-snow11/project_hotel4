{% extends 'base.html.twig' %}

{% block title %}Reservation Management{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1>Reservation Management</h1>
            <a href="{{ path('app_reservation_new') }}" class="btn btn-primary">+ Create New Reservation</a>
            <a href="{{ path('admin') }}" class="btn btn-secondary">← Back to Dashboard</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Reservation Code</th>
                        <th>User</th>
                        <th>Room</th>
                        <th>Check-in</th>
                        <th>Check-out</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.id }}</td>
                        <td><code>{{ reservation.idReservation }}</code></td>
                        <td>{{ reservation.user.prenom }} {{ reservation.user.nom }}</td>
                        <td>Room {{ reservation.chambre.chambreNumero }}</td>
                        <td>{{ reservation.dateDebut|date('d/m/Y') }}</td>
                        <td>{{ reservation.dateFin|date('d/m/Y') }}</td>
                        <td>
                            {% if reservation.status == 'confirmée' %}
                                <span class="badge bg-success">Confirmed</span>
                            {% elseif reservation.status == 'en cours' %}
                                <span class="badge bg-primary">In Progress</span>
                            {% elseif reservation.status == 'terminée' %}
                                <span class="badge bg-secondary">Completed</span>
                            {% elseif reservation.status == 'annulée' %}
                                <span class="badge bg-danger">Cancelled</span>
                            {% else %}
                                <span class="badge bg-warning">Pending</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-sm btn-info">View</a>
                            <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">No reservations found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            
            <p class="mt-3">Total Reservations: {{ reservations|length }}</p>
        </div>
    </div>
</div>
{% endblock %}