{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1>User Management</h1>
            <a href="{{ path('admin') }}" class="btn btn-secondary">‚Üê Back to Dashboard</a>
            <a href="{{ path('app_user_new') }}" class="btn btn-primary">+ Create New User</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone</th>
                        <th>Roles</th>
                        <th>Actions</th>  <!-- Add this -->
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.telephone }}</td>
                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-danger">Admin</span>
                                {% else %}
                                    <span class="badge bg-primary">User</span>
                                {% endif %}
                            </td>
                            <td>  <!-- Add this entire cell -->
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">No users found</td>  <!-- Change colspan to 7 -->
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            
            <p class="mt-3">Total Users: {{ users|length }}</p>
        </div>
    </div>
</div>
{% endblock %}