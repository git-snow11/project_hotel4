{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1>User Details</h1>
            <a href="{{ path('app_user_list') }}" class="btn btn-secondary">‚Üê Back to list</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th style="width: 40%;">ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>First Name</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>{{ user.telephone }}</td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td>
                            {% if 'ROLE_ADMIN' in user.roles %}
                                <span class="badge bg-danger">Admin</span>
                            {% else %}
                                <span class="badge bg-primary">User</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-4">
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}