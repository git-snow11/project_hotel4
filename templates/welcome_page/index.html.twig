{% extends 'base.html.twig' %}

{% block title %}Welcome to Hotel Transylvania{% endblock %}

{% block body %}
<div class="container">
    <div class="row min-vh-100 align-items-center justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <h1 class="display-4 mb-4">üè® Welcome to Hotel Transylvania</h1>
                    <p class="lead mb-5">Your perfect stay awaits!</p>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <div class="card h-100 border-primary">
                                <div class="card-body d-flex flex-column">
                                    <h3 class="card-title mb-3">Already Have an Account?</h3>
                                    <p class="card-text mb-4">Login to book your room and manage your reservations.</p>
                                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg mt-auto">
                                        Login
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card h-100 border-success">
                                <div class="card-body d-flex flex-column">
                                    <h3 class="card-title mb-3">New Guest?</h3>
                                    <p class="card-text mb-4">Create an account to start booking your perfect room.</p>
                                    <a href="{{ path('app_register') }}" class="btn btn-success btn-lg mt-auto">
                                        Register
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-5 pt-4 border-top">
                        <h5 class="text-muted">Why Book With Us?</h5>
                        <div class="row mt-4">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <i class="fas fa-star text-warning" style="font-size: 2rem;"></i>
                                    <p class="mt-2 mb-0">Best Prices</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <i class="fas fa-bed text-primary" style="font-size: 2rem;"></i>
                                    <p class="mt-2 mb-0">Luxury Rooms</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <i class="fas fa-clock text-success" style="font-size: 2rem;"></i>
                                    <p class="mt-2 mb-0">24/7 Support</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

